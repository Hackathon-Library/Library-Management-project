<!DOCTYPE html>
<html>
<head>

	<title><%= data.name %> Home's</title>
	<% include ../partials/head %>

</head>
<body class="container">

	<header>
		<% include ../partials/header %>
	</header>

	<main>
		<div class="row">
			<h2><label for="login-form">Welcome <%= data.name %></label></h2>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<div class="row">
					<label for="name"><%= data.name %></label></div>
					<div class="row"><label for="id"><%= data.rollno %></label></div>
					<div class="row"><label for="branch"><%= data.branch %></label></div>
				</div>



				<div class="pull-right">
					<img src="#" alt="Mountain View" >
				</div>
			</div>
		</div>
		<div class="row">
			<label for="search-book">Online Search Book</label>
		</div>
		<div class="row">
			<div>
				<form action="/user/search" method="POST" class="form-inline">
					<div class="form-group">
						<input type="text" class="form-control" name="bookname" id="Bookname" placeholder="Book Name">
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="author" id="Author" placeholder="Author Name">
					</div>
					<button type="submit" class="btn btn-info">Search</button>
				</form>
			</div>
		</div>
		<div class="row">
			<label for="Issued-Book">Issued Books</label>
		</div>
		<div class="row">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Issued Books </th>
						<th>Deadlines</th>
					</tr>
				</thead>
				<tbody>
					<% books.forEach(function(book,index){%>
						<tr>
							<td><%= book.bookname %></td>
							<td><%= books["deadline"][index] %></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div>

			<div class="row">
				<button type="submit" class="btn btn-info">Generate Registeration Certificate</button>
			</div>
		</main>

		<footer>
			<% include ../partials/footer %>
		</footer>

	</body>
	</html>